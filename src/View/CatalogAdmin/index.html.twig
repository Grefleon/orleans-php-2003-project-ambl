{% extends 'layout.html.twig' %}

{% block title %}
CatalogueAdmin
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/catalog.css">
    <link rel="stylesheet" href="/assets/css/catalogAdmin.css">
{% endblock %}

{% block content %}
    <header class="header">
        <div class="container h-100 justify-around">
            <div class="row h-75 align-items-center">
                <div class="col-12">
                    <h1>Catalogue</h1>
                </div>
            </div>
        </div>
    </header>

    <main>
        <div class="container-fluid bg-light h-100">
            <div class="row align-items-center justify-content-center pt-5 pb-5">
                <form method="get" action="/catalog/index/" class="d-flex flex-direction-row justify-content-around">
                    <div class="form-group">
                        <label for="search">Rechercher</label>
                        <input id="search" type="search" name="search" class="form-control">
                    </div>
                    <div class="form-group mt-4 pt-2 ml-2">
                        <button class="btn btn-primary">Chercher</button>
                    </div>
                </form>
            </div>
        </div>

        <section class="catalog">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm mr-5">
                            <div class="card-body card-block-header">
                                <a class="stretched-link" href="/catalogAdmin/add">
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    {% for element in elements %}
                        <div class="col-lg-4 col-md-6">
                            <div class="catalog-card mt-2">
                                <div class="block-img">
                                    {% if element.picture is empty  %}
                                        <img src="/assets/images/catalog/{{ element.type_name }}_image.jpg" alt="">
                                    {% else %}
                                        <img src="/assets/images/catalog/{{ element.picture }}" alt="">
                                    {% endif %}
                                    <div class="status">
                                        {% if element.toxicity_name != 'none'  %}
                                            <p>{{ element.toxicity_name }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="catalog-card-content">
                                    <div class="block-title mb-3">
                                        <h4>{{ element.common_name }}</h4>
                                    </div>
                                    <a title="Consulter" href="/catalogAdmin/show/{{ element.id }}" class="box_btn"><i class="fa fa-eye"></i></a>
                                    <a title="Modifier" href="" class="box_btn"><i class="fa fa-edit"></i></a>
                                    <form action="" method="post">
                                        <input type="hidden" value="{{ element.id }}" name="id">
                                        <button class="box_btn" type="submit">
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </main>
{% endblock %}