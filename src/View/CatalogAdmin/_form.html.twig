<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="hidden" name="id" value="{{ element.id }}">
    </div>
    <div class="form-group">
        <label for="commonName">Nom commun *</label>
        <input type="text" name="commonName" class="form-control" placeholder="Champignon" value="{{ dataSend.commonName ?? element.common_name ?? '' }}" required>
    </div>
    <div class="form-group">
        <label for="latinName">Nom latin *</label>
        <input type="text" name="latinName" class="form-control" placeholder="Tremella" value="{{ dataSend.latinName ?? element.latin_name ?? '' }}" required>
    </div>
    <div class="form-group">
        <label for="color">Couleur *</label>
        <input type="text" name="color" class="form-control" placeholder="Jaune" value="{{ dataSend.color ?? element.color ?? '' }}" required>
    </div>
    <div class="form-group">
        <label for="description">Description *</label>
        <textarea type="text" name="description" class="form-control" placeholder="De petite taille" rows="10" required>{{ dataSend.description ?? element.description ?? '' }}</textarea>
    </div>
    <div class="form-group">
        <label for="type">Type *</label>
        <select name="type" class="form-control">
            <option value="">Selectionner le type de l'élément</option>
            {% for elementType in elementTypes %}
                <option value="{{ elementType.id }}" {% if dataSend.type  == elementType.id or element.element_type_id == elementType.id %}selected{% endif %}>
                    {{ elementType.name }}
                </option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="toxicity">Toxicité</label>
        <select name="toxicity" class="form-control">
            <option value="">Selectionner un élément dans la liste</option>
            {% for toxicity in toxicities %}
                <option value="{{ toxicity.id }}" {% if dataSend.toxicity  == toxicity.id or element.toxicity_id == toxicity.id %}selected{% endif %}>
                    {{ toxicity.name }}
                </option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <span for="pciture">Photo</span>
        <div class="custom-file">
            <input type="file" class="custom-file-input" name="picture">
            <span class="custom-file-label">{{ element.picture ?? ''}}</span>
        </div>
    </div>

    <button class="btn btn-primary">Valider</button>
</form>