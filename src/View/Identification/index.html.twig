{% extends 'layout.html.twig' %}

{% block title %}
    Identification
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/identification.css">
{% endblock %}

{% block content %}
    <section class="identification">
        <header class="header">
            <div class="container h-100 justify-around">
                <div class="row h-75 align-items-center">
                    <div class="col-12">
                        <h1>Identifiez votre trouvaille</h1>
                    </div>
                </div>
            </div>
        </header>

        <div class="container container-form">
            <div class="text-center explication">
                <p>Envoyez nous la photo et description d'une plante ou champignon que vous avez trouvé dans notre
                    département du Loiret, et nous vous répondrons au plus vite pour vous aider à l'identifier</p>
            </div>
            {% if errors is not empty %}
                <ul class="errors">
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
            {% if success == 1 and errors is empty %}
                <ul class="success">
                    <li>Votre requête a bien été envoyée</li>
                </ul>
            {% endif %}

            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="picture">La photo de votre trouvaille<span class="red">*</span></label>
                    <input class="form-control" type="file" name="picture" id="picture" required />
                </div>

                <div class="form-group">
                    <label for="sender_name">Votre nom<span class="red">*</span></label>
                    <input class="form-control" type="text" value="{{ request.sender_name }}" name="sender_name" id="sender_name" required>
                </div>

                <div class="form-group">
                    <label for="mail">Votre adresse email<span class="red">*</span></label>
                    <input class="form-control" type="email" value="{{ request.mail }}" name="mail" id="mail" required>
                </div>

                <div class="form-group">
                    <label for="message">Message complémentaire (lieu de la découverte, date, etc.)</label>
                    <textarea class="form-control" name="message" id="message">{{ request.message }}</textarea>
                </div>

                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Valider</button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}